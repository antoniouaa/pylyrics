{% extends "base.j2" %}

{% block title %}
Home - pylyrics
{% endblock %}

{% block content %}
<h2 class="text-center">Currently playing: {{song}}, by {{artist}}</h2>

<div id="outer-lyric-div" class="container text-center">
    <div class="row">
        {% for line in lyrics %}
            <div class="col-6">
                <span class="">
                    {{line}}
                </span>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
